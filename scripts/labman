import click


@click.group()
def labman():
    pass


@labman.command()
@click.option('--port', required=False, type=int,
              help="Port where the webserver will start", default=8080)
def start_webserver(port):
    """Starts the labman webserver"""
    import socket
    import errno

    from tornado.httpserver import HTTPServer
    from tornado.ioloop import IOLoop

    from labman.gui.webserver import Application

    http_server = HTTPServer(Application())
    try:
        http_server.listen(port)
    except socket.error as e:
        if e.errno == errno.EADDRINUSE:
            raise RuntimeError(
                "Port %d is already in use. Please choose another "
                "port with --port" % port)
        else:
            raise

    click.echo("Labman started on port %d" % port)
    ioloop = IOLoop.instance()

    ioloop.start()


@labman.command()
def config():
    """Generate labman configuration file"""
    from os.path import expanduser

    from labman.db.configuration_manager import ConfigurationManager

    config_fp = expanduser(click.prompt('Path to the configuration file',
                                        default='~/.labman.cfg'))

    click.echo('Main configuration:')
    test_env = click.prompt('Test environment', default=True)

    click.echo('Postgres configuration:')
    db_host = click.prompt('Postgres host', default='localhost')
    db_port = click.prompt('Postgres port', default=5432)
    db_name = click.prompt('Database name', default='labman')
    db_user = click.prompt('Postgres user', default='labman')
    db_password = click.prompt('Postgres user password', hide_input=True,
                               confirmation_prompt=True, default="")
    db_admin_user = click.prompt('Postgres admin user', default='labman')
    db_admin_password = click.prompt(
        'Postgres admin user password', hide_input=True,
        confirmation_prompt=True, default="")

    click.echo('Qiita configuration:')
    qiita_enabled = click.prompt('Configure Qiita?', default=False)
    if qiita_enabled:
        qiita_host = click.prompt(
            'Qiita host', default='https://localhost:21174')
        qiita_client_id = click.prompt(
            'Qiita client id', hide_input=True, confirmation_prompt=True)
        qiita_client_secret = click.prompt(
            'Qiita client secret', hide_input=True, confirmation_prompt=True)
        qiita_server_cert = click.prompt(
            'Qiita server certificate', default="")
    else:
        qiita_host = None
        qiita_client_id = None
        qiita_client_secret = None
        qiita_server_cert = None

    ConfigurationManager.create(config_fp, test_env, db_host, db_port, db_name,
                                db_user, db_password, db_admin_user,
                                db_admin_password, qiita_enabled, qiita_host,
                                qiita_client_id, qiita_client_secret,
                                qiita_server_cert)


@labman.command()
def create_environment():
    """Generate labman environment"""
    from labman.db.environment_manager import make_environment
    make_environment()


@labman.command()
def destroy_environment():
    """Destroys the labman environment"""
    from labman.db.environment_manager import destroy_environment
    destroy_environment(True)


if __name__ == '__main__':
    labman()
